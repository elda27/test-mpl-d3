{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": [
        "*"
      ]
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  }
}